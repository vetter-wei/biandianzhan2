<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:background="@drawable/dia_quan"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dia_quan_top">

            <ImageView
                android:id="@+id/iv_cabz_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:src="@mipmap/back"/>

            <TextView
                android:id="@+id/tv_czbz_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="@dimen/dimen_8"
                android:text="序号138"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_19"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_12"
            android:text="内容 : "
            android:textColor="@color/font_black_deep"
            android:textSize="@dimen/textsize_16"/>

        <TextView
            android:id="@+id/tv_czbz_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_230"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_8"
            android:background="@drawable/dia_quan_pj"
            android:padding="@dimen/dimen_5"
            android:scrollbars="vertical"
            android:text=" adkfjkaljsl
            asfadsfas
             dfsafasdfa
             fasdfadsfasfa
             fasfasffasfsaff
             sdfffffarrrrrrafasfas
             fasfasfasf
             sdfafafasfffffffffffffffffff
             asdsffffffffff
             as






             adfaffa



             afaffr





















             最后"
            android:textColor="@color/font_black_deep"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_4"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    android:id="@+id/tv_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_5"

                    android:text="执行情况 :"
                    android:textColor="@color/font_black_deep"
                    android:textSize="@dimen/textsize_16"/>

                <CheckBox
                    android:id="@+id/cb_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_7"
                    android:checked="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:scaleX="0.7"
                    android:scaleY="0.7"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_5"

                    android:text="模拟 :"
                    android:textColor="@color/font_black_deep"
                    android:textSize="@dimen/textsize_16"/>

                <CheckBox
                    android:id="@+id/cb_centre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_8"
                    android:checked="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:scaleX="0.7"
                    android:scaleY="0.7"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_czbz_sure"
                android:layout_width="@dimen/dimen_120"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginBottom="@dimen/dimen_25"
                android:background="@drawable/dia_quan_button"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
