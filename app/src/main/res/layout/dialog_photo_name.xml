<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/dimen_300"
            android:layout_height="@dimen/dimen_38"
            android:background="@drawable/dia_quan_top">

            <TextView
                android:id="@+id/tv_jszl_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="图片名称"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16" />

            <ImageView
                android:id="@+id/image_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10"
                android:src="@mipmap/close" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_300"
            android:layout_height="160dp"
            android:background="@drawable/dia_jszl"
            android:orientation="vertical">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_29"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/et_photoname"
                    android:layout_marginTop="@dimen/dimen_7"
                    android:hint="请输入图片名称"
                    android:textColorHint="#cccccc"
                    android:textSize="13sp"
                    android:padding="5dp"
                    android:gravity="start"
                    android:background="@drawable/btn_gray_border"
                    android:layout_width="match_parent"
                    android:minHeight="40dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_cancel"
                    android:layout_width="@dimen/dimen_75"
                    android:layout_height="@dimen/dimen_25"
                    android:background="@drawable/dia_quan_button"
                    android:text="取消"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_14"/>

                <Button
                    android:id="@+id/button_confirm"
                    android:layout_width="@dimen/dimen_75"
                    android:layout_height="@dimen/dimen_25"
                    android:layout_marginLeft="@dimen/dimen_30"
                    android:background="@drawable/dia_quan_button"
                    android:text="确认"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_14"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
