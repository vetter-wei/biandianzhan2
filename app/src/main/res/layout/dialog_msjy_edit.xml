<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="@dimen/dimen_300"
            android:layout_height="@dimen/dimen_38"
            android:background="@drawable/dia_quan_top">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="描述/建议"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16" />

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10"
                android:src="@mipmap/close" />
        </RelativeLayout>

        <LinearLayout
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:layout_width="@dimen/dimen_300"
            android:layout_height="wrap_content"
            android:background="@drawable/dia_jszl"
            android:orientation="vertical">

            <TextView
                android:text="描述："
                android:paddingTop="13sp"
                android:textSize="15sp"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:layout_height="33dp" />
            <AutoCompleteTextView

                android:id="@+id/et_wtms"
                android:layout_marginTop="@dimen/dimen_7"
                android:hint="请输入描述内容..."
                android:textColorHint="#cccccc"
                android:textSize="13sp"
                android:padding="5dp"
                android:gravity="start"
                android:background="@drawable/btn_gray_border"
                android:layout_width="match_parent"
                android:minHeight="90dp"
                android:layout_height="wrap_content" />

            <TextView
                android:text="建议："
                android:paddingTop="13sp"
                android:textSize="15sp"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:layout_height="33dp" />
            <AutoCompleteTextView
                android:id="@+id/et_cljy"
                android:layout_marginTop="@dimen/dimen_7"
                android:hint="请输入建议内容..."
                android:textColorHint="#cccccc"
                android:textSize="13sp"
                android:padding="5dp"
                android:gravity="start"
                android:background="@drawable/btn_gray_border"
                android:layout_width="match_parent"
                android:minHeight="90dp"
                android:layout_height="wrap_content" />







            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_reset"
                    android:layout_width="@dimen/dimen_75"
                    android:layout_height="@dimen/dimen_25"
                    android:background="@drawable/dia_quan_button"
                    android:text="重置"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_14"/>

                <Button
                    android:id="@+id/button_confirm"
                    android:layout_width="@dimen/dimen_75"
                    android:layout_height="@dimen/dimen_25"
                    android:layout_marginLeft="@dimen/dimen_30"
                    android:background="@drawable/dia_quan_button"
                    android:text="确认"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_14"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
