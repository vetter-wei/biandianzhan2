<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/menuopen_down"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_18">

        <LinearLayout
            android:id="@+id/ll_downPopupWindow_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:src="@mipmap/video_down" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginLeft="@dimen/dimen_16"
                android:text="视频"
                android:textColor="@color/colorTask"
                android:textSize="@dimen/dimen_9" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_downPopupWindow_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ll_downPopupWindow_video"
            android:layout_marginLeft="@dimen/dimen_15"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/phpto_down" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:text="拍照"
                android:textColor="@color/colorTask"
                android:textSize="@dimen/dimen_9" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="风险："
        android:textColor="@color/colorProject"
        android:textSize="@dimen/dimen_9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginBottom="@dimen/dimen_5"
        android:ellipsize="end"
        android:maxEms="8"
        android:maxLines="2"
        android:text="的沙发上的发生的事放假咯好的空间发顺丰"
        android:textColor="@color/colorText"
        android:textSize="@dimen/textsize_8" />

</LinearLayout>