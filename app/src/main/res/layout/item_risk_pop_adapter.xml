<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="4">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/tv_pop_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="1"
                android:textColor="@color/line_fc"
                android:textSize="@dimen/textsize_24"/>
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dimen_55"
            android:background="@color/colorChuiZhi"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审核人"
                android:textColor="@color/line_fc"
                android:textSize="@dimen/textsize_11"/>

            <TextView
                android:id="@+id/tv_pop_shr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_2"
                android:layout_marginTop="@dimen/dimen_10"
                android:gravity="right"
                android:text="将昌平"
                android:textColor="@color/test_gray_66"
                android:textSize="@dimen/textsize_10"/>
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dimen_30"
            android:background="@color/colorChuiZhi"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:paddingLeft="@dimen/dimen_1"
                android:id="@+id/tv_3"
                android:layout_width="@dimen/dimen_80"
                android:layout_height="wrap_content"
                android:text="危险点分析"
                android:textColor="@color/line_fc"
                android:textSize="@dimen/textsize_11"/>

            <TextView

                android:id="@+id/tv_pop_wxdfx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_3"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="误入带电间隔"
                android:textColor="@color/test_gray_66"
                android:textSize="@dimen/textsize_10"/>
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dimen_30"
            android:background="@color/colorChuiZhi"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center">

            <TextView

                android:paddingLeft="@dimen/dimen_8"
                android:id="@+id/tv_4"
                android:layout_width="@dimen/dimen_115"
                android:layout_height="wrap_content"
                android:text="安全控制措施"
                android:textColor="@color/line_fc"
                android:textSize="@dimen/textsize_11"/>

            <TextView
                android:id="@+id/tv_pop_aqkz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_4"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="操作前核对双重名称"
                android:textColor="@color/test_gray_66"
                android:textSize="@dimen/textsize_10"/>
        </RelativeLayout>
    </LinearLayout>


    <View
        android:background="@mipmap/risk_row"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2"/>
</LinearLayout>